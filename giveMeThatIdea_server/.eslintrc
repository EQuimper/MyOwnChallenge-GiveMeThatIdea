{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true,
   },
   "ecmaFeatures": {
    "es6": true,
    "classes": true,
   },
   "rules": {
     "comma-dangle": 0,
     "max-len": [1, 180, 4],
     "arrow-body-style": [0],
     "space-before-function-paren": 0,
     "consistent-return": 0,
     "func-names": 0,
     "arrow-parens": 0,
     "import/prefer-default-export": 0,
     "no-plusplus": 0,
     "no-underscore-dangle":0,
     "prefer-arrow-callback": 0
   }
}
